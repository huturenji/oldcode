{
    "name": "paperprint",
    "productName": "兆日纸纹系统",
    "version": "2.3.8",
    "description": "paperprint electron client",
    "main": "./src/main.js",
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "兆日纸纹系统",
                "executableName": "兆日纸纹系统",
                "icon": "./main",
                "asar": false
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-dmg",
                    "config": {}
                }
            ]
        }
    },
    "build": {
        "productName": "兆日纸纹系统",
        "appId": "兆日纸纹系统",
        "compression": "store",
        "directories": {
            "output": "dist/paperprint"
        },
        "asar": false,
        "files": [
            "!.history/**/*",
            "!.vscode/**/*",
            "!cpp_node/**/*",
            "!dll/**/*",
            "!logs/**/*",
            "!uvb/**/*",
            "!ah100sdk.log",
            "!captured_image.jpg",
            "!preview_temp.jpg"
        ],
        "extraResources": [
            {
                "from": "build/",
                "to": "app/build/",
                "filter": [
                    "*.tar"
                ]
            },
            {
                "from": "native.node",
                "to": "../"
            },
            {
                "from": "./config.properties",
                "to": "../"
            },
            {
                "from": "dll/",
                "to": "../dll"
            },
            {
                "from": "sinopy.exe",
                "to": "../"
            }
        ],
        "mac": {
            "icon": "./main.icns",
            "target": [
                "dmg",
                "zip"
            ],
            "category": "your.app.category.type"
        },
        "win": {
            "icon": "./main.png",
            "target": [
                {
                    "target": "nsis"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "scripts": {
        "start": "electron-forge start",
        "build": "electron-builder",
        "rebuild": "electron-rebuild -f -w sqlite3"
    },
    "author": "yg",
    "license": "MIT",
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.65",
        "@electron-forge/core": "^6.0.0-beta.65",
        "@electron-forge/maker-dmg": "^6.0.0-beta.65",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
        "@electron-forge/maker-zip": "^6.0.0-beta.65",
        "cross-env": "^7.0.3",
        "electron": "10.1.3",
        "electron-builder": "^23.6.0",
        "electron-rebuild": "^3.2.9"
    },
    "dependencies": {
        "fs-extra": "^11.1.1",
        "log4js": "^6.9.1",
        "node-gyp": "^9.4.0",
        "ref-array-napi": "^1.2.2",
        "ref-napi": "^2.1.2",
        "ref-struct-napi": "^1.1.1",
        "sqlite": "^5.0.1",
        "sqlite3": "^5.0.0"
    }
}
